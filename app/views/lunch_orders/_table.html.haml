%table.table.table-responsive.table-striped
  %tr
    %th ID
    %th Order Date
    %th
  - @lunch_orders.each do |lunch_order|
    %tr
      %td= lunch_order.id
      %td= lunch_order.order_date.strftime("%d-%m-%Y")
      %td.text-right
        = link_to 'Edit', edit_lunch_order_path(lunch_order), class: 'btn btn-primary'
        = link_to 'Show', lunch_order_path(lunch_order), class: 'btn btn-info'
        = link_to 'Destroy', lunch_order_path(lunch_order), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
